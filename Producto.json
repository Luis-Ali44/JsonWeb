{
  "paths": {
    "/api/products": {
  "get": {
    "tags": ["Products"],
    "summary": "Listar productos",
    "description": "Obtiene el catálogo de productos disponibles. Clientes pueden crear, leer y editar. Admin CRUD completo",
    "parameters": [
      {
        "name": "page",
        "in": "query",
        "required": false,
        "schema": {
          "type": "integer",
          "minimum": 1
        },
        "description": "Número de página"
      },
      {
        "name": "limit",
        "in": "query",
        "required": false,
        "schema": {
          "type": "integer",
          "minimum": 1
        },
        "description": "Cantidad de registros por página"
      },
      {
        "name": "search",
        "in": "query",
        "required": false,
        "schema": {
          "type": "string"
        },
        "description": "Buscar producto por nombre"
      },
      {
        "name": "sort",
        "in": "query",
        "required": false,
        "schema": {
          "type": "string",
          "enum": ["price", "name"]
        },
        "description": "Campo para ordenar resultados"
      },
      {
        "name": "order",
        "in": "query",
        "required": false,
        "schema": {
          "type": "string",
          "enum": ["asc", "desc"]
        },
        "description": "Orden ascendente o descendente"
      }
    ],
    "responses": {
      "200": {
        "description": "Lista de productos",
        "content": {
          "application/json": {
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/components/schemas/Product"
              }
            },
            "example": [
              {
                "productId": "a1b1c1",
                "categoryId": "A123",
                "name": "Maruchitan",
                "price": 20,
                "description": "Maruchan de camarón",
                "inStock": true
              },
              {
                "productId": "e3t5g6",
                "categoryId": "c456",
                "name": "Sabrita",
                "price": 22,
                "description": "Takis moraditas",
                "inStock": true
              }
            ]
          }
        }
      },
      "404": {
        "description": "No se encontraron productos",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/Error"
            },
            "example": {
              "statusCode": 404,
              "message": "No se encontraron productos",
              "error": "Not Found"
            }
          }
        }
      }
    }
  },

      "post": {
        "tags": ["Products"],
        "summary": "Crear producto",
        "description": "Permite al administrador crear un nuevo producto",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ProductCreate"
              },
              "example": {
                    "categoryId" : "A123",
                    "name" : "Maruchitan",
                    "price" : 20,
                    "description" : "Maruchan de camarón",
                    "inStock" : true
                }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Producto creado",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Product"
                },
                "example": {
                    "categoryId" : "A123",
                    "name" : "Maruchitan",
                    "price" : 20,
                    "description" : "Maruchan de camarón",
                    "inStock" : true
                }
              }
            }
          },
          "422": {
            "description": "Datos inválidos"
          },
          "409": {
            "description": "Producto duplicado"
          }
        }
      }
    },

    "/api/products/{productId}": {
      "get": {
        "tags": ["Products"],
        "summary": "Obtener producto por ID",
        "parameters": [
          {
            "name": "productId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Producto encontrado",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Product"
                }
              }
            }
          },
          "404": {
            "description": "Producto no encontrado"
          }
        }
      },

      "patch": {
        "tags": ["Products"],
        "summary": "Actualizar producto",
        "description": "Permite al administrador actualizar parcialmente un producto",
        "parameters": [
          {
            "name": "productId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ProductUpdate"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Producto actualizado",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Product"
                }
              }
            }
          },
          "404": {
            "description": "Producto no encontrado"
          },
          "422": {
            "description": "Datos inválidos"
          }
        }
      }
    }
  },

  "components": {
    "schemas": {
      "Product": {
        "type": "object",
        "required": [
          "productId",
          "categoryId",
          "name",
          "price",
          "description",
          "inStock"
        ],
        "properties": {
          "productId": {
            "type": "string",
            "format": "uuid"
          },
          "categoryId": {
            "type": "string",
            "format": "uuid"
          },
          "name": {
            "type": "string"
          },
          "price": {
            "type": "number",
            "minimum": 0.01
          },
          "description": {
            "type": "string"
          },
          "inStock": {
            "type": "boolean"
          }
        },
        "description": "Producto disponible en el catálogo"
      },

      "ProductCreate": {
        "type": "object",
        "required": [
          "categoryId",
          "name",
          "price",
          "description",
          "inStock"
        ],
        "properties": {
          "categoryId": {
            "type": "string",
            "format": "uuid"
          },
          "name": {
            "type": "string"
          },
          "price": {
            "type": "number",
            "minimum": 0.01
          },
          "description": {
            "type": "string"
          },
          "inStock": {
            "type": "boolean"
          }
        }
      },

      "ProductUpdate": {
        "type": "object",
        "properties": {
          "categoryId": {
            "type": "string",
            "format": "uuid"
          },
          "name": {
            "type": "string"
          },
          "price": {
            "type": "number",
            "minimum": 0.01
          },
          "description": {
            "type": "string"
          },
          "inStock": {
            "type": "boolean"
          }
        }
      },
    "Error": {
        "type": "object",
        "properties": {
            "statusCode": {
                "type": "integer",
                "example": 404
            },
            "message": {
                "type": "string",
                "example": "No se encontraron productos"
            },
            "error": {
                "type": "string",
                "example": "Not Found"
            }
        }
    }

    }
  }
}
